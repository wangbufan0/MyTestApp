<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@color/color_bai">

    <ImageView
        android:id="@+id/mIv_touxiang"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:id="@+id/mll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="8dp">

        <TextView
            android:id="@+id/mTv_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="wangbufan"
            android:textColor="@color/color_hei"
            android:padding="4dp" />
        <TextView
            android:id="@+id/mTv_neirong"
            android:maxLines="5"
            android:text="这是一个测试"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:autoLink="all"/>


        <com.jaeger.ninegridimageview.NineGridImageView
            android:id="@+id/mNiv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:imgGap="1dp"
            app:maxSize="9"
            app:showStyle="fill"
            app:singleImgSize="200dp" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <TextView
                android:id="@+id/tv_repost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="转发"/>

            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评论"
                android:layout_weight="1"
                android:gravity="center"/>


            <TextView
                android:id="@+id/tv_attitudes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点赞"
                android:paddingRight="10dp"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>